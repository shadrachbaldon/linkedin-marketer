{
  "manifest_version": 2,

  "name": "Linkedin Marketer",
  "description": "Auto connect on 2nd and 3rd connections and can broadcast messages to 1st connections on search result page",
  "version": "1.0",

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "page_action": {
    "default_icon": "images/icon.png",
    "default_popup": "popup.html"
  },
  "permissions" : [
    "declarativeContent",
    "tabs",
    "storage",
    "https://www.linkedin.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/*"],
      "js": ["lib/js/jquery.min.js","lib/js/jquery.countdownTimer.min.js","content.js"]
    }
  ],
  "web_accessible_resources": [
    "ui.html"
  ]
}